<% content_for :title do %><%= @region.name %> -- FTC Root<%end %>
<p id="notice"><%= notice %></p>

<center>
<h1>
  <%= @region.name %>
  </h1>
  <h3>
  <%= link_to "View region stats at FTCStats.org", @website, :class=>"pure-button pure-button-primary nav-link" if @website %>
</h3>


<table class="pure-table centered" style="max-width:800px;">
    <thead>
        <tr class="hidden-xs-down">
            <th colspan="2" style="text-align:left">Name</th>
            <th>Approx. Date</th>
            <th> Type </th>
        </tr>
        <tr class="hidden-sm-up">
            <th colspan="3">Name</th>
        </tr>
        <tr class="hidden-sm-up">
            <th class="td-important">Approx. Date</th>
            <th class="td-meh"> Type </th>
        </tr>
    </thead>

    <tbody>
        <% @meets.each do |event| %>
        <tr class="hidden-xs-down">
            <td colspan="2" style="text-align:left"><%= link_to event.name, event %></td>
            <td><%= event.date %></td>
            <td><%= event.competitiontype %> </td>
        </tr>
        <tr class="hidden-sm-up">
            <td colspan="3" style="font-size:105% !important;"><%= link_to event.name, event %></td>
        </tr>
        <tr class="hidden-sm-up">
            <td><%= event.date %></td>
            <td><%= event.competitiontype %> </td>
        </tr>

        <% end %>
        <%= will_paginate @meets %>
    </tbody>
</table> </center>

<%= link_to 'Back', 'javascript:history.go(-1);' %>
